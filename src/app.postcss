@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

/* gold-nouveau theme */
@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf');
	font-display: swap;
}

.markdown p {
	@apply my-4;
}

.markdown ol {
	list-style-type: decimal;
}

.markdown ul {
	list-style-type: disc;
}
.markdown {
	& ol,
	& ul {
		margin: inherit;
		padding-left: 40px;
	}
}
